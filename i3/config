# i3 config file (v4)
#
# (c) Oleksii Tsvietnov, me@vorakl.name
#
# This configuration file is based on:
# - https://www.reddit.com/r/i3wm/comments/3tdpkf/how_i_do_i3_a_how_to_of_sorts_my_config_included/
# - https://gist.github.com/diyan/6192878
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

##########################################################################
#                                  general                               #
##########################################################################

# set mod key (Mod1=<Alt>, Mod4=<Win>)
set $mod Mod4

# set tabbed mode by default. It looks like tasks pannel on an each screen
workspace_layout tabbed
workspace_auto_back_and_forth yes
force_display_urgency_hint 1000 ms

# font for window titles and ibar 
font pango:Cantarell Bold 12

# a bigger border to make resing by mouse a bit easier
new_window normal 4
new_float normal 4
hide_edge_borders both

# Brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5

# Sound
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

##########################################################################
#                                   focus                                #
##########################################################################

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse true
popup_during_fullscreen smart

# kill focused window
bindsym $mod+q kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h; exec notify-send 'horizontal orientation'

# split in vertical orientation
bindsym $mod+v split v; exec notify-send 'vertical orientation'

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+t sticky toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window
bindsym $mod+minus scratchpad show


##########################################################################
#                                workspaces                              #
##########################################################################

# main ws without binding to it any applications
set $ws1 "1  "
# all browsers
set $ws2 "2  "
# all mail clients if any
set $ws3 "3  "
# all instant messanger
set $ws4 "4  "
# any media applications
set $ws5 "5  "
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# set monitors
bindsym $mod+Shift+m exec --no-startup-id ~/bin/set-monitors.sh

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

# navigate workspaces next / previous / back_and_forth
bindsym $mod+x workspace next
bindsym $mod+z workspace prev
bindsym $mod+c workspace back_and_forth

##########################################################################
#                            shut down / restart                         #
##########################################################################

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# set shut down, restart and locking features
bindsym $mod+Shift+e mode "$mode_system"
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (p)ower
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -d -I 5 -c 000000 -f && echo mem > /sys/power/state, mode "default"
    bindsym s exec --no-startup-id "i3lock -d -c 000000 -f && echo mem > /sys/power/state; systemctl suspend", mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

##########################################################################
#                               resize windows                           #
##########################################################################

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

##########################################################################
#                                bar settings                            #
##########################################################################

# start i3bar to display a workspace bar
bindsym $mod+Shift+b bar mode toggle
bar {
        position bottom
        #status_command i3status
        # Uses py3status (dbus notificationa, updates every second) 
        status_command py3status -b -c ~/.i3status.conf -n 5
}

##########################################################################
#                                applications                            #
##########################################################################

# start a terminal that is specified in TERMINAL env
bindsym $mod+Ctrl+Return exec i3-sensible-terminal

# start dmenu (a program launcher)
bindsym $mod+Ctrl+d exec dmenu_run -i -l 10

# start dmenu for .Desktop files (a program launcher)
bindsym $mod+Ctrl+r exec i3-dmenu-desktop --dmenu='dmenu -i -l 10'

# application groups

# browsers
bindsym $mod+Ctrl+b mode "$browsers"
set $browsers (p)alemoon, (f)irefox, (c)hrom
mode "$browsers" {
        bindsym p exec palemoon, mode "default"
        bindsym f exec firefox, mode "default"
        bindsym c exec google-chrome, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# instant messangers
bindsym $mod+Ctrl+i mode "$ims"
set $ims (h)ipchat, (s)kype
mode "$ims" {
        bindsym h exec hipchat, mode "default"
        # put a tick in skype's configuration on "run minimized"
        # this hides "floating" main window in tray and keep opened a "tiling" chat window
        # then toggle main window hide/unhide by cllicking on icon in tray
        bindsym s exec skype, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# settings 
bindsym $mod+Shift+s mode "$settings"
set $settings (a)ppearance, (v)olume, (n)etwork
mode "$settings" {
        # to configure the appearance of all the whole interface
        bindsym a exec lxappearance, mode "default"
        # it's useful to keep "floating: volume's window in the scratchpad
        bindsym v exec pavucontrol, mode "default"
        # to configure Network Manager
        bindsym n exec nm-connection-editor, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# mail client
bindsym $mod+Ctrl+m exec evolution

# video player
bindsym $mod+Ctrl+v exec vlc

# take a screenshot
bindsym $mod+Print exec xfce4-screenshooter

# translate
# to RU
bindsym $mod+Shift+l exec --no-startup-id env YA_TRANSLATE_API="trnsl.1.1.20160807T201541Z.d37885d10e3c0237.56c88d937e73a5c47dd85b37afd1e043dfb1d44e" ~/bin/ya-translate.sh ru
# to EN
bindsym $mod+Shift+k exec --no-startup-id env YA_TRANSLATE_API="trnsl.1.1.20160807T201541Z.d37885d10e3c0237.56c88d937e73a5c47dd85b37afd1e043dfb1d44e" ~/bin/ya-translate.sh en

# assign applications to workspaces
assign [instance="Navigator"] $ws2
assign [class="google-chrome-beta"] $ws2
assign [class="Evolution"] $ws3
assign [class="Skype"] $ws4
assign [instance="hipchat"] $ws4
assign [instance="vlc"] $ws5

# open specific applications in floating mode
for_window [class="Lxappearance"] floating enable
for_window [class="(?i)virtualbox"] floating enable
for_window [class="Transmission-gtk"] floating enable
for_window [class="vlc"] floating enable
for_window [instance="xfce4-panel"] floating enable
for_window [instance="wrapper-1.0"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [instance="skype" title="^vorakl.*Skype™$"] floating enable
for_window [instance="xfce4-terminal" title="^Update packages$"] floating enable
for_window [Class="Vinagre"] floating enable


##########################################################################
#                                  autostart                             #
##########################################################################

# Sets an active monitor
exec_always --no-startup-id ~/bin/set-monitors.sh && feh --bg-fill '/home/vorakl/Pictures/bg.jpg'

# Network Manager in tray
exec --no-startup-id nm-applet

# Control colors' temperature accordingly to a day time. Location: Munich, Germany
exec --no-startup-id redshift -l 48.12:11.60 -t 5500:4900

# Composite manager (for transparency)
exec --no-startup-id xcompmgr -Cc

